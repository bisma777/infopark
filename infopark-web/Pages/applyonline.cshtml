@page "/applyonline"

@{
    ViewData["Title"] = "list";
    Layout = "~/pages/Shared/_Layout.cshtml";
}

<!-- ======= Breadcrumbs ======= -->

<div class="content" style="margin-top: 100px">
    <div class="container-fluid">
        <div class="col-md-10 m-auto">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Apply Online</h4>
                    <p class="card-category">Complete your Registration</p>
                </div>
                <div class="card-body">
                    <form>
                        <div class="section-title-doc">
                            <h4>Personal Information</h4>

                        </div>
                        <!-- Bio Detail -->
                        @*<h4>Personal Information</h4>*@
                    <div class="row">
                        <div class="col-md-3">
                            <label class=" "></label>
                            <div class="form-group d-flex  mt-3 ">

                                <select id="" class="form-controll boxslct" name="">
                                    <option value="mr">Mr.</option>
                                    <option value="miss">Miss</option>
                                    <option value="mrs"> Mrs. </option>
                                </select>
                            </div>

                        </div>
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                <label class=" ">First Name</label>
                                <input type="text" class="form-controll">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                <label class=" ">Middle Name</label>
                                <input type="text" id="middleName" value="" name="middleName" required="required" class="form-controll">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                <label class=" ">Last Name</label>
                                <input type="text" class="form-controll">
                            </div>
                        </div>
                    </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group d-flex">
                                    <select id="" class="form-controll boxslct" name="">
                                        <option value="">--Select Gender--</option>
                                        <option value="male">Male</option>
                                        <option value="Female"> Female </option>
                                    </select>
                                </div>

                            </div>
                            <div class="col-md-6">
                              
                                <div class="form-group d-flex ">

                                    <select id="" class="form-controll" name="">
                                        <option value="Unmarried">Marital Status</option>
                                        <option value="Unmarried">Unmarried</option>
                                        <option value="Married"> Married </option>
                                    </select>
                                    <div class="select-dropdown"></div>
                                </div>
                            </div>
                            <div class="col-md-4 pb-2">
                                <label for="birthday">Birth Date</label>
                                <span class="bmd-form-group"><input type="date" class="form-controll"></span>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label class=" ">Father's Name</label>
                                    <input type="text" class="form-controll">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label class=" ">Mother's Name</label>
                                    <input type="text" class="form-controll">
                                </div>
                            </div>
                        </div>

                        <div class="section-title-doc">
                            <h4>Contact Detail</h4>

                        </div>
                        <!-- Contact details -->
                        @*<h4>Contact Detail</h4>*@
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label class=" "> Personal Contact</label>
                                    <input type="text" class="form-controll">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label class="">Father's Contact</label>
                                    <input type="text" class="form-controll">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label class=" ">Email</label>
                                    <input type="email" class="form-controll">
                                </div>
                            </div>
                        </div>

                        <div class="section-title-doc">
                            <h4>Present Address</h4>

                        </div>
                        <!-- Present Address -->
                        @*<h4> Present Address</h4>*@
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group bmd-form-group">
                                    <label class=" "> Address</label>
                                    <input type="text" class="form-controll">
                                </div>
                            </div>
                            <div class="col-md-6 pb-2">
                                <label>State</label>
                                <div class="">

                                    <!-- DROPDOWN: Present State-->
                                    <select id="dropdown" class="form-controll " name="">

                                        <option value="Jammu and Kashmir"> Jammu and Kashmir</option>
                                        <option value="Delhi">Delhi</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 pb-2">
                                <label for="CourseID ">District</label>
                                <div class="">

                                    <!-- DROPDOWN: Present District-->
                                    <select id="dropdown" class="form-controll" name="presentdistric">
                                        <option value="Doda">Doda</option>
                                        <option value="Jammu"> Jammu</option>
                                    </select>

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label class=" ">Pin Code</label>
                                    <input type="text" class="form-controll">
                                </div>
                            </div>
                        </div>

                        <!-- Permanent Address -->
                        <div class="row d-flex ">
                            <div class="cal-md-6section-title-doc">
                                <h4>Permenant Address</h4>
                              
                            </div>
                            <div class="col-md-6 ">
                                <input type="checkbox" id="address" class="checkbox" style="text-align:right" name="" value="Same"><span style="font-size:15px"> Same as present address</span>
                            </div>
                           
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group bmd-form-group">
                                    <label class=" "> Adress</label>
                                    <input type="text" class="form-controll">
                                </div>
                            </div>
                            <div class="col-md-6 pb-2">
                                <label>State</label>
                                <div class="">

                                    <!-- DROPDOWN: Permanent State-->
                                    <select id="dropdown" class="form-controll " name="">

                                        <option value="Jammu and Kashmir"> Jammu and Kashmir</option>
                                        <option value="Delhi">Delhi</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 pb-2">
                                <label for="CourseID ">District</label>
                                <div class="">

                                    <!-- DROPDOWN: Permanat District-->
                                    <select id="dropdown" class="form-controll" name="presentdistric ">
                                        <option value="Doda">Doda</option>
                                        <option value="Jammu"> Jammu</option>

                                    </select>

                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label class=" ">Pin Code</label>
                                    <input type="text" class="form-controll">
                                </div>
                            </div>
                        </div>
                        <div class="section-title-doc">
                            <h4>Educational Detail</h4>

                        </div>
                        <!-- Educational Datail-->
                        @*<h4>Educational Detail</h4>*@
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group bmd-form-group">
                                    <label class="  eductn-style">Highest Qualification</label>
                                    <input type="text" class="form-controll">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label class=" ">Percentage</label>
                                    <input type="text" class="form-controll">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label class=" ">Year of Passing</label>
                                    <input type="text" class="form-controll">
                                </div>
                            </div>
                        </div>
                        <div class="section-title-doc">
                            <h4>Additional Qualification</h4>

                        </div>
                        <!-- ADDITIONAL QUALIFICATION -->
                        @*<h4>Additional Qualification</h4>*@
                        <div class="row">
                            <div class="col-md-12 pb-4">
                                <div class="form-group bmd-form-group">
                                    <label class=" ">Course Name</label>
                                    <input type="text" class="form-controll">
                                </div>
                            </div>
                        </div>
                        <div class="section-title-doc">
                            <h4>Course Applying</h4>

                        </div>
                        @*<h4>Course Applying</h4>*@
                        <div class="row">

                            <div class="col-md-6">

                                <div class="form-group d-flex">

                                    <!-- DROPDOWN: course -->
                                    <select id="dropdown" class="form-controll" name="course">
                                        <option value="#">Course</option>
                                        <option value="1"> B.Tech</option>
                                        <option value="2"> BSc IT</option>
                                        <option value="3"> BCA</option>
                                    </select>

                                </div>
                            </div>


                        </div>
                        <div class="col-md-12 mt-5 mb-1">
                            <label style="color:#DC4E41" class=""><span style="color:#000000">NOTE :</span> Registration Fee is Rs. 500</label>
                        </div>


                        <div class="text-center p-4   float-lg-right">
                            <button type="submit" class="get-started-btn">Apply Now</button>
                        </div>
                    </form>
                </div>
            </div>


            <div class="card">
              
                <div class="card-body">
                    <div class="section-title-doc">
                        <h4> Documents</h4>

                    </div>
                    <form>
                        <!-- DOCUMENT-->

                        <div class="row mt-5 mb-5">

                            <div class="col-md-10  text-center justify-content-center">
                                <div class="row col-md-10 ml-auto">
                                    <div class="col-md-2 text-center justify-content-center justify-content-md-center">
                                        <div>
                                            <a href="javascript:void(0);" id="iPphoto"> <img src="~/assets/img/upload.png" class="img-fluid" alt="Alternate Text" /></a>
                                            <div class="text-center">
                                                <strong>Photo</strong>
                                            </div>
                                        </div>
                                        <input type="file" name="Pphoto" id="filepp" value="" style="display:none" />
                                    </div>
                                    <div class="col-md-2">
                                        <div>
                                            <a href="javascript:void(0);" id="iidproof"><img src="~/assets/img/upload.png" class="img-fluid" alt="Alternate Text" /></a>
                                            <div class="text-center">
                                                <strong>ID Proof</strong>
                                            </div>
                                        </div>
                                        <input type="file" name="idproof" id="idproof" value="" style="display:none" />

                                    </div>
                                    <div class="col-md-2">
                                        <div>
                                            <a href="javascript:void(0);" id="iqualification"><img src="~/assets/img/upload.png" class="img-fluid" alt="Alternate Text" /></a>
                                            <div class="text-center">
                                                <strong>Qualification</strong>
                                            </div>
                                        </div>
                                        <input type="file" name="qualification" id="qualification" value="" style="display:none" />

                                    </div>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

